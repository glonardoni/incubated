{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "ServiceTechnician",
    "type": "object",
    "properties": {
        "technicianID": {
            "type": "string",
            "description": "Technician Identification Code"
        },
        "organization": {
            "type": "string",
            "description": "Organization to which the technician belongs (PRIMA branch or external office)"
        },
        "hasSkills": {
            "type": "array",
            "items": {
                "$ref": "https://smart-data-models.github.io/dataModel.PredictiveMaintenace/MaintenanceSkill/schema.json"
            },
            "description": "Description of capabilities and experiences"
        },
        "toolsProvided": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "Tool name"
            },
            "description": "Technical equipment (special equipment not always provided for all teams)"
        },
        "geographicalArea": {
            "type": "string",
            "description": "Definition of the area and location"
        },
        "referenceAddress": {
            "type": "string",
            "description": "Starting position (Office and Home)"
        },
        "calendar": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "date",
                "description": "Calendar of activities for the period already planned"
            },
            "description": "List of planned activities"
        },
        "historicalServices": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "date",
                "description": "Managed service"
            },
            "description": "List of managed services"
        }
    },
    "required": [
        "technicianID",
        "organization",
        "skillsAndExperiences",
        "toolsProvided",
        "geographicalArea",
        "referenceAddress",
        "calendar",
        "historicalServices"
    ]
}