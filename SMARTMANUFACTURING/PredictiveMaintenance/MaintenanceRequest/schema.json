{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "MaintenanceRequest",
    "type": "object",
    "properties": {
        "machineID": {
            "type": "string",
            "description": "Identify the system (S/N or Unique Identifier)"
        },
        "customerID": {
            "type": "string",
            "description": "Identify the customer (Actual)"
        },
        "address": {
            "type": "string",
            "description": "Machine address (Factory address)"
        },
        "analysisDate": {
            "type": "string",
            "format": "date",
            "description": "Date of the end of analysis"
        },
        "analysisTimeWindow": {
            "type": "array",
            "items": {
                "$ref": "https://smart-data-models.github.io/dataModel.PredictiveMaintenace/MaintenanceComponent/schema.json"
            },
            "description": "Window of the analysis (Calendar & working time)"
        },
        "hasConfiguration": {
            "type": "string",
            "description": "Machine description (List of components & option)"
        },
        "anomalyType": {
            "type": "string",
            "description": "Class and Grade of anomaly (Classification referred to the maintenance)"
        },
        "anomalyIndicators": {
            "type": "string",
            "description": "Technical information about the anomaly (Information on analysis)"
        },
        "maintenanceDeadline": {
            "type": "string",
            "format": "date",
            "description": "Maintenance required by .. (Last date for optimal action)"
        },
        "maintenanceRequired": {
            "type": "string",
            "description": "Maintenance Service description (List of activity)"
        },
        "requiresSkill": {
            "type": "array",
            "items": {
                "$ref": "https://smart-data-models.github.io/dataModel.PredictiveMaintenace/MaintenanceSkill/schema.json"
            },
            "description": "Technical skill description (Technical ability required)"
        },
        "requiresComponent": {
            "type": "array",
            "items": {
                "$ref": "https://smart-data-models.github.io/dataModel.PredictiveMaintenace/MaintenanceComponent/schema.json"
            },
            "description": "List of all the materials required"
        },
        "durationOfOperation": {
            "type": "number",
            "description": "Working time on system (Number of hours to execute the activity)"
        }
    },
    "required": [
        "machineID",
        "customerID",
        "address",
        "analysisDate",
        "analysisTimeWindow",
        "machineConfiguration",
        "anomalyType",
        "anomalyIndicators",
        "maintenanceDeadline",
        "maintenanceRequired",
        "maintenanceSkill",
        "componentsRequired",
        "durationOfOperation"
    ]
}
