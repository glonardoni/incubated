{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "MachineComponent",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/Location-Commons"
        },
        {
            "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
        }
    ],
    "properties": {
        "componentPRIMAID": {
            "type": "string",
            "description": "Property. PRIMA Code - All components have a PRIMA codification."
        },
        "componentSupplierID": {
            "type": "string",
            "description": "Property. Supplier Component Code - Original."
        },
        "componentDescription": {
            "type": "string",
            "description": "Property. Product Name and a brief description, also link to supplier site."
        },
        "needsSkill": {
            "type": "array",
            "items": {
                "$ref": "https://smart-data-models.github.io/dataModel.PredictiveMaintenance/MaintenanceSkill/schema.json"
            },
            "description": "Relationship. Experience and tools required."
        },
        "supplierID": {
            "type": "string",
            "description": "Property. Identify the Supplier - Contact and info."
        },
        "warehouseID": {
            "type": "string",
            "description": "Property. Identify the warehouse places, also c/o customer of service suppliers."
        },
        "locationInWarehouse": {
            "type": "string",
            "description": "Property. Identify the component location."
        },
        "numberOfPiecesAvailable": {
            "type": "integer",
            "description": "Property. Current stock availability in different warehouses."
        },
        "numberOfPiecesOnDelivery": {
            "type": "integer",
            "description": "Property. Order in progress - Info about order confirmation."
        },
        "dateGuaranteedDelivery": {
            "type": "string",
            "format": "date",
            "description": "Property. Guaranteed availability date confirmed by supplier."
        },
        "measurement": {
            "type": "object",
            "properties": {
                "height": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Property. Height of the object."
                        },
                        "unit": {
                            "type": "string",
                            "description": "Property. Unit of measurement for height (e.g., cm, m, in).",
                            "default": "cm"
                        }
                    },
                    "required": [
                        "value",
                        "unit"
                    ]
                },
                "width": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Property. Width of the object."
                        },
                        "unit": {
                            "type": "string",
                            "description": "Property. Unit of measurement for width (e.g., cm, m, in).",
                            "default": "cm"
                        }
                    },
                    "required": [
                        "value",
                        "unit"
                    ]
                },
                "length": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Property. Length of the object."
                        },
                        "unit": {
                            "type": "string",
                            "description": "Property. Unit of measurement for length (e.g., cm, m, in).",
                            "default": "cm"
                        }
                    },
                    "required": [
                        "value",
                        "unit"
                    ]
                },
                "weight": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Property. Weight of the object."
                        },
                        "unit": {
                            "type": "string",
                            "description": "Property. Unit of measurement for weight (e.g., kg, lb).",
                            "default": "kg"
                        }
                    },
                    "required": [
                        "value",
                        "unit"
                    ]
                }
            },
            "required": [
                "height",
                "width",
                "length",
                "weight"
            ]
        },
        "componentCost": {
            "type": "number",
            "description": "Property. Cost for the customer in Euros."
        },
        "deliveryCost": {
            "type": "number",
            "description": "Property. Cost for the customer in Euros."
        }
    },
    "required": [
        "componentPRIMAID",
        "componentSupplierID",
        "componentDescription",
        "needsSkill",
        "supplierID",
        "warehouseID",
        "locationInWarehouse",
        "numberOfPiecesAvailable",
        "numberOfPiecesOnDelivery",
        "dateGuaranteedDelivery",
        "measurement",
        "componentCost",
        "deliveryCost"
    ]
}