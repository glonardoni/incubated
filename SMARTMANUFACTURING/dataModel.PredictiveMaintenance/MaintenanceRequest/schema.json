{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "MaintenanceRequest",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/Location-Commons"
        },
        {
            "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
        }
    ],
    "properties": {
        "machineID": {
            "type": "string",
            "description": "Property. Identify the system (S/N or Unique Identifier)."
        },
        "customerID": {
            "type": "string",
            "description": "Property. Identify the customer (Actual)."
        },
        "address": {
            "type": "string",
            "description": "Property. Machine address (Factory address)."
        },
        "analysisDate": {
            "type": "string",
            "format": "date",
            "description": "Property. Date of the end of analysis."
        },
        "analysisTimeWindow": {
            "type": "object",
            "properties": {
                "from": {
                    "type": "string",
                    "format": "date"
                },
                "to": {
                    "type": "string",
                    "format": "date"
                }
            },
            "required": [
                "from",
                "to"
            ],
            "description": "Property. Window of the analysis (Calendar & working time)."
        },
        "hasConfiguration": {
            "type": "array",
            "items": {
                "$ref": "https://smart-data-models.github.io/dataModel.PredictiveMaintenance/MaintenanceComponent/schema.json"
            },
            "description": "Property. Machine description (List of components & option)."
        },
        "anomalyType": {
            "type": "string",
            "description": "Property. Class and Grade of anomaly (Classification referred to the maintenance)."
        },
        "anomalyIndicator": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "Technical information about the anomaly (Information on analysis)."
            },
            "description": "Property. Technical information about the anomaly (Information on analysis)."
        },
        "maintenanceDeadline": {
            "type": "string",
            "format": "date",
            "description": "Property. Maintenance required by .. (Last date for optimal action)."
        },
        "maintenanceRequired": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "Required activities"
            },
            "description": "Property. Maintenance Service description (List of activity)."
        },
        "requiresSkill": {
            "type": "array",
            "items": {
                "$ref": "https://smart-data-models.github.io/dataModel.PredictiveMaintenance/MaintenanceSkill/schema.json"
            },
            "description": "Relationship. Technical skill description (Technical ability required)."
        },
        "requiresComponent": {
            "type": "array",
            "items": {
                "$ref": "https://smart-data-models.github.io/dataModel.PredictiveMaintenance/MaintenanceComponent/schema.json"
            },
            "description": "Relationship. List of all the materials required."
        },
        "durationOfOperation": {
            "type": "number",
            "description": "Property. Working time on system (Number of hours to execute the activity)."
        }
    },
    "required": [
        "machineID",
        "customerID",
        "address",
        "analysisDate",
        "analysisTimeWindow",
        "hasConfiguration",
        "anomalyType",
        "anomalyIndicator",
        "maintenanceDeadline",
        "maintenanceRequired",
        "requiresSkill",
        "requiresComponent",
        "durationOfOperation"
    ]
}